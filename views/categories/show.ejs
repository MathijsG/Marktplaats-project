<% include ../partials/header %>
<h1 class="text-dark">Alle producten van <%=category.toLowerCase()%></h1>
<div class="row">
  <% products.forEach(function(product){ %>
  <div class="col-4 card-deck">
    <div class="card shadow m-2">
      <div class="card-body">
        <div class="card-title">
          <a href="/advertenties/<%=product._id%>">
            <h5 class="text-dark"><%=product.title%></h5>
          </a>
        </div>
        <div class="card-text"><%=product.body%></div>
      </div>
    </div>
  </div>
  <% }); %>
</div>
<% include ../partials/footer %>
<% include partials/header %>
<div class="row justify-content-center">
  <div class="col-8 justify-content-center">
    <h1 class="text-dark">Marktplaats</h1>
  </div>
</div>
<!-- begin searchbar -->
<div class="row justify-content-center">
  <div class="col-8 justify-content-center">
    <form class="form-inline" action="/advertenties" method="get">
      <div class="form-group mx-sm-3 mb-2">
        <input id="searchInput" type="text" class="form-control" name="search" placeholder="Zoekterm">
        <select name="municipalities[]" class="form-control" multiple>
          <option value="all">--- Alle gemeenten ---</option>
          <% municipalities.forEach(municipality => { %>
          <option value="<%=municipality%>"><%=municipality%></option>
          <% }); %>
        </select>
        <!--
          <select name="distance" class="form-control">
          <option>Alle afstanden</option>
          <option>&lt; 5 KM</option>
          <option>&lt; 10KM</option>
          <option>&lt; 25KM</option>
          <option>&lt; 50KM</option>
          -->
        </select>
      </div>
      <button id="searchButton" type="submit" class="btn btn-warning mb-2"><i class="fa fa-search" aria-hidden="true"></i> Zoeken</button>
    </form>
  </div>
</div>
<!-- eind searchbar -->

<div class="row justify-content-center">
  <div class="col-8 justify-content-center">
    <h2>Alle categorieÃ«n</h2>
  </div>
</div>
<div class="row justify-content-center">
  <div class="list-group col-8">
    <% product.forEach(function(product){ %>
    <a href="/categorieen/<%=product%>" class="list-group-item list-group-item-action list-group-item-light"><i class="fa fa-tag" aria-hidden="true"></i> <%=product%></a>
    <% }) %>
  </div>
</div>
<% include partials/footer %>
<% include ../partials/header %>
<h1 class="text-dark">Alle advertenties</h1>
<div class="row">
  <% products.forEach(function(product) { %>
  <div class="card-deck col-sm-6 col-lg-4">
    <div class="card shadow m-2">
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            <a href="/advertenties/<%=product._id%>">
              <h5 class="text-dark"><%=product.title%></h5>
            </a>
          </div>
          <div class="col-6 text-right">
            <% if(product.images.length > 0 ) { %>
            <div class="parent">
              <img src="/uploads/products/<%=product.images[0]%>">
            </div>
            <% } %>
          </div>
        </div>
        <div class="card-text">
          <%=product.body.substring(0, 50)%>
        </div>
        <span class="badge badge-info text-dark p-2"><%=product.category%></span>
      </div>
    </div>
  </div>
  <% }); %>
</div>
<% include ../partials/footer %>
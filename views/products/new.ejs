<% include ../partials/header %>

<h1 class="text-dark">Nieuwe advertentie</h1>

<form action="/advertenties" method="POST">
  <div class="form-group">
    <label for="title">Titel</label>
    <input type="text" class="form-control" id="title" name="product[title]" placeholder="Titel" required />
  </div>
  <div class="form-group">
    <label for="body">Omschrijving</label>
    <textarea class="form-control" id="body" rows="3" name="product[body]" placeholder="Geef een omschrijving" required></textarea>
  </div>
  <input class="btn btn-outline-warning" type="submit" value="Opslaan" />
</form>
<% include ../partials/footer %>

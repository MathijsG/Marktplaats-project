<% include ../partials/header %>

<div class="container mb-3">
  <div class="row">
    <div class="col-lg-3">
      <h1 class="my-4">Shop Name</h1>
      <div class="list-group">
        <% product.bids.forEach(function(bid){ %>
        <p><%=bid.createdAt.toLocaleDateString("en-GB")%> - &euro; <%=bid.amount%></p>
        <% }) %>
      </div>
      <form action="/advertenties/<%=product._id%>/bids" method="POST">
        <input class="form-control" type="number" name="bid[amount]" id="bid" min="0" />
        <input class="btn btn-success btn-block mt-2" type="submit" name="" value="Bied" />
      </form>
    </div>

    <div class="col-lg-9">
      <div class="card mt-4">
        <img class="card-img-top img-fluid" src="http://placehold.it/900x400" alt="" />
        <div class="card-body">
          <h3 class="card-title"><%=product.title%></h3>
          <h4>Prijs: &euro; <%=product.price%></h4>
          <h4>Bieden vanaf: &euro; <%=product.minprice%></h4>
          <p class="card-text">
            <%=product.body%>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>

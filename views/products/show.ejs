<% include ../partials/header %>
<div class="card">
  <div class="row">
    <div class="col-lg-3">
      <h1 class="my-4"><%=product.title%></h1>
    </div>
    <div class="col">
      <% if (product.images.length > 0 ) { %>
      <div id="carousel">
        <div class="carousel slide shadow card rounded" data-ride="carousel">
          <div class="carousel-inner">
            <% product.images.forEach(function(image) { %>
            <div class="carousel-item">
              <img class="d-block w-100" src="/uploads/products/<%=image%>">
            </div>
            <% }); %>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="card-text">
        <%=product.body%>
      </div>
    </div>
  </div>
  <div class="list-group">
    <% product.bids.forEach(function(bid){ %>
    <p>
      <%=bid.bid%> - <%=bid.createdAt%>
    </p>
    <% }) %>
  </div>
  <form action="/advertenties/<%=product._id%>/bids" method="POST" class="form-inline">
    <input type="number" name="bid[bid]" id="bid" class="form-control">
    <input type="submit" name="" id="" value="Bied" class="btn btn-primary">
  </form>

  <div class="col-lg-9">
    <div class="card mt-4">

      <div class="card-body">
        <h4>Prijs: &euro; <%=product.price%></h4>
        <h4>Bieden vanaf: &euro; <%=product.minprice%></h4>

      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>
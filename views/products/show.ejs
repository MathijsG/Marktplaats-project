<% include ../partials/header %>

<div class="container mb-3">
  <div class="row">
    <div class="col-lg-3">
      <h1 class="my-4">Shop Name</h1>
      <div class="list-group">
        <% product.bids.forEach(function(bid){ %>
        <p><%=bid.bid%> - <%=bid.createdAt%></p>
        <% }) %>
      </div>
      <form action="/advertenties/<%=product._id%>/bids" method="POST">
        <input type="number" name="bid[bid]" id="bid" />
        <input type="submit" name="" id="" value="Bied" />
      </form>
    </div>

    <div class="col-lg-9">
      <div class="card mt-4">
        <img class="card-img-top img-fluid" src="http://placehold.it/900x400" alt="" />
        <div class="card-body">
          <h3 class="card-title"><%=product.title%></h3>
          <h4>Prijs: &euro; <%=product.price%></h4>
          <h4>Bieden vanaf: &euro; <%=product.minprice%></h4>
          <p class="card-text">
            <%=product.body%>
          </p>
        </div>
        <div class="card-footer">  
         <form id="frmRemoveProduct" class="d-flex justify-content-end" 
         action="/advertenties/<%=product._id%>?_method=DELETE" method="POST">
           <input type="submit" value="Verwijder advertentie !" id="btnRemoveProduct" class="btn btn-outline-warning btn-xs">
         </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>

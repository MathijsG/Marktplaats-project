<% include ./partials/header %>

<div class="container p-5">
  <% include ./partials/messages %>
  <form action="/auth/signup" method="post">
    <div class="form-group">
      <label>Gebruikersnaam</label>
      <input class="form-control" type="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" />
    </div>
    <div class="form-group">
      <label>E-mail</label>
      <input class="form-control" type="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" />
    </div>
    <div class="form-group">
      <label>Wachtwoord</label>
      <input class="form-control" type="password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" />
    </div>
    <div class="form-group">
      <label>Herhaal wachtwoord</label>
      <input class="form-control" type="password" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
    </div>
    <div>
      <input class="btn btn-success" type="submit" value="Sign Up" />
    </div>
  </form>
  <p>Al een account? <a href="/auth/login">Login</a></p>
</div>

<% include ./partials/footer %>
